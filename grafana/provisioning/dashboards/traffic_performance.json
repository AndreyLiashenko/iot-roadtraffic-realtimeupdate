{
  "uid": "traffic_perf",
  "title": "Traffic System Performance",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 3,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "System Health Overview (CPU, Memory)",
      "type": "row"
    },
    {
      "id": 1,
      "title": "CPU Usage (%)",
      "type": "timeseries",
      "datasource": { "type": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 20 }
        }
      },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{instance=~\"consumer-.*\"}[1m]) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "gridPos": { "x": 0, "y": 1, "w": 12, "h": 8 }
    },
    {
      "id": 2,
      "title": "Memory Usage (MB)",
      "type": "timeseries",
      "datasource": { "type": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 10 },
          "unit": "megabytes"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{instance=~\"consumer-.*\"} / 1024 / 1024",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 1, "w": 12, "h": 8 }
    },
    {
      "id": 3,
      "title": "GC Collections Rate (per sec)",
      "type": "timeseries",
      "datasource": { "type": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 10 },
          "unit": "ops"
        }
      },
      "targets": [
        {
          "expr": "sum by (instance) (rate(python_gc_collections_total{instance=~\"consumer-.*\"}[1m]))",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "gridPos": { "x": 16, "y": 1, "w": 8, "h": 8 }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 101,
      "title": "Application Performance Comparison",
      "type": "row"
    },
    {
      "id": 8,
      "title": "Average Message Processing Time",
      "type": "timeseries",
      "datasource": { "type": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "s" } },
      "targets": [
        {
          "expr": "(rate(message_processing_seconds_sum[2m]) / rate(message_processing_seconds_count[2m])) or (rate(db_write_seconds_sum[2m]) / rate(db_write_seconds_count[2m]))",
          "legendFormat": "{{consumer_name}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 8 }
    },
    {
      "id": 10,
      "title": "Messages Processed per Second (Throughput)",
      "type": "timeseries",
      "datasource": { "type": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "ops" } },
      "targets": [
        {
          "expr": "rate(message_processing_seconds_count[2m]) or rate(db_write_seconds_count[2m])",
          "legendFormat": "{{consumer_name}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 8 }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "id": 102,
      "title": "Infrastructure & System Metrics",
      "type": "row"
    },
    {
      "id": 6,
      "title": "Kafka Consumer Lag",
      "type": "timeseries",
      "datasource": { "type": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 10, "lineWidth": 2 },
          "unit": "short"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "sum(kafka_consumergroup_lag) by (consumergroup)",
          "legendFormat": "{{consumergroup}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 19, "w": 12, "h": 8 }
    }
  ]
}